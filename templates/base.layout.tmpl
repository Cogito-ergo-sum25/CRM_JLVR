{{define "base"}}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRM - JLVR</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="flex flex-col md:flex-row">
        <div class="bg-gray-800 shadow-xl h-16 fixed bottom-0 md:relative md:h-screen z-10 w-full md:w-48">
            <div class="md:mt-12 md:w-48 md:fixed md:left-0 md:top-0 content-center md:content-start text-left justify-between">
                <ul class="list-reset flex flex-row md:flex-col py-0 md:py-3 px-1 md:px-2 text-center md:text-left text-white">
                    <li class="mr-3 flex-1">
                        <a href="/" class="block py-1 md:py-3 pl-1 align-middle border-b-2 border-gray-800 hover:border-blue-500">
                            <span class="pb-1 md:pb-0 text-xs md:text-base block md:inline-block">Inicio</span>
                        </a>
                    </li>
                    <li class="mr-3 flex-1">
                        <a href="/contactos" class="block py-1 md:py-3 pl-1 align-middle border-b-2 border-gray-800 hover:border-pink-500">
                            <span class="pb-1 md:pb-0 text-xs md:text-base block md:inline-block">Contactos</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5">
            <div class="p-6">
                {{block "content" .}} {{end}}
            </div>
        </div>
    </div>
</body>
</html>
{{end}}