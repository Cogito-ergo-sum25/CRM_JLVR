{{template "base" .}}

{{define "content"}}
<div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg border-t-4 border-indigo-600">
    <h2 class="text-2xl font-bold mb-6 text-gray-800 flex items-center">
        <span class="mr-2">⚖️</span> Registro de Contacto Legal
    </h2>
    
    <form action="/nuevo-contacto" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">
            <label class="block text-sm font-semibold text-gray-700">Nombre del Cliente o Contacto</label>
            <input type="text" name="nombre" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 p-2 border" required>
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700">Número de Expediente</label>
            <input type="text" name="expediente" placeholder="Ej: 123/2025" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border">
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700">Tipo de Relación</label>
            <select name="tipo_relacion" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border">
                <option value="Cliente">Cliente</option>
                <option value="Contraparte">Contraparte</option>
                <option value="Abogado Contrario">Abogado Contrario</option>
                <option value="Autoridad">Autoridad / Juzgado</option>
            </select>
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700">Teléfono</label>
            <input type="text" name="telefono" placeholder="Ej: 55 1234 5678" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border">
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700">Correo Electrónico</label>
            <input type="email" name="email" placeholder="ejemplo@correo.com" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border">
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700">Fecha de Cumpleaños</label>
            <input type="date" name="fecha_cumpleanios" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border">
        </div>

        <div>
            <label class="block text-sm font-semibold text-gray-700">Juzgado / Instancia</label>
            <input type="text" name="juzgado" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border">
        </div>

        <div class="md:col-span-2">
            <label class="block text-sm font-semibold text-gray-700">Recomendado por</label>
            <input type="text" name="recomendado_por" placeholder="¿Quién refirió al cliente?" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border">
        </div>

        <div class="md:col-span-2">
            <label class="block text-sm font-semibold text-gray-700">Notas y Estrategia Inicial</label>
            <textarea name="notas" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm p-2 border"></textarea>
        </div>

        <div class="md:col-span-2">
            <button type="submit" class="w-full bg-indigo-600 text-white font-bold py-3 px-4 rounded-md hover:bg-indigo-700 transition duration-300 shadow-md">
                Guardar Expediente
            </button>
        </div>
    </form>
</div>
{{end}}